{
  "name": "book-search",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/react-fontawesome": "^0.1.9",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "scripts": {
    "build:style": "tailwind build src/styles/index.css -o src/styles/tailwind.css",
    "start": "npm run build:style && react-scripts start",
    "build": "npm run build:style && react-scripts build",
    "nightwatch": "nightwatch --skiptags visual",
    "test:ci": "npm run build && react-scripts test && npm run test:e2e:ci && npm run test:visual:ci",
    "test:unit": "react-scripts test",
    "test:e2e:local": "npm run build && npm run nightwatch",
    "test:e2e:local:multi": "npm run build && npm run nightwatch -- --env selenium.chrome,selenium.firefox",
    "test:e2e:ci": "npm run nightwatch -- -c nightwatch.ci.conf.js --retries 3 --env selenium.chrome,selenium.firefox",
    "test:visual:ci": "percy exec -- nightwatch -c nightwatch.ci.conf.js --tag visual",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@percy/nightwatch": "^1.1.0",
    "chromedriver": "^83.0.0",
    "geckodriver": "^1.19.1",
    "nightwatch": "^1.3.5",
    "react-scripts": "3.4.1",
    "react-test-renderer": "^16.13.1",
    "selenium-server": "^3.141.59",
    "serve-handler": "^6.1.2",
    "snapshot-diff": "^0.7.0",
    "tailwindcss": "^1.2.0"
  }
}
